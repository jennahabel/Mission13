
@{
}

@model IEnumerable<string>

<div class="d-grid gap-2">

    <a asp-controller="Home" asp-action="ShowBowler" asp-route-teamName="" class="btn btn-outline-secondary btn-block">Home</a>

    @foreach (string t in Model)
    {
        <a asp-controller="Home" asp-action="ShowBowler" asp-route-teamName="@t"
           class="btn @(ViewBag.TeamName == t ? "btn-primary btn-block" : "btn-outline-secondary btn-block")">@t</a>

    }
</div>


